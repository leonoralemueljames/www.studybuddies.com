<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Study Buddy</title>
    <link href="~/Content/themes/hire.css" rel="stylesheet">
</head>
<body>
    <header class="app-header">
        <div class="app-logo-name">
            <a href="~/Default.cshtml">
                <img src="~/Images/SBApp.png" alt="App Logo" class="app-logo">
                <h1 class="app-name">Study Buddies</h1>
            </a>
        </div>
    </header>
    <div class="title-description">
        <h2>Available Tutor for this field</h2>
    </div>
    <div class="product-container">
        <div class="product" onclick="openPopup('Amy Jane', 'Experience Tutor for more that 3 years', '₱1500/week', ['https://m.media-amazon.com/images/I/513HewiQssL.jpg', 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRqEA5yPTgLr-m1HrPfm8L_L9hGPp1nxtKBfW6ovYTLkQ&s', 'https://emergenttutoring.com/wp-content/uploads/2021/06/benefits-of-tutoring-in-college.jpg', ])">
            <img src="https://teach4theheart.com/wp-content/uploads/2014/04/professional-dress-smaller.jpg" alt="Rachelle Rotia" class="product-image">
            <div class="product-info">
                <h2 class="product-title">Amy Jane</h2>
                <p class="product-description">Tutor for algebra and calculus</p>
                <p class="product-price">₱1500/week</p>
            </div>
        </div>
        <div class="product" onclick="openPopup('Jean Velri', 'Graduate of Education major in mathematics', '₱2500/week', ['https://www.4icu.org/i/programs-courses-degrees/professional-diploma-of-teaching-500x356.png', 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTqnNIsE_vZECdFCEyGkr0D8FFHEQ5t_l8SSPGd2JmQcw&s', 'https://evelynlearning.b-cdn.net/wp-content/uploads/2019/07/tuyj-e1648615761793.png'])">
            <img src="https://ae01.alicdn.com/kf/HTB1t.XxxnqWBKNjSZFxq6ApLpXa6/Professional-Suit-Set-Tooling-Women-Student-Teacher-Interview-Service-Uniform-OL-Suit-Skirt-Workwear-12891.jpg_640x640.jpg" alt="Product 2" class="product-image" style="height: 250px;">
            <div class="product-info" >
                <h2 class="product-title">Jean Velri</h2>
                <p class="product-description">Major in mathematics</p>
                <p class="product-price">₱2500/week</p>
            </div>
        </div>
        <!-- Add more products as needed -->
    </div>

    <div id="product-popup" class="popup">
        <div class="popup-content">
            <span class="close" onclick="closePopup()">&times;</span>
            <h2 id="popup-title"></h2>
            <div id="popup-images" class="popup-images-container">
                <button class="prev-button" onclick="prevImage()">&#10094;</button>
                <div class="images-wrapper">
                    <img id="popup-image" class="popup-image" src="" alt="">
                </div>
                <button class="next-button" onclick="nextImage()">&#10095;</button>
            </div>
            <p id="popup-description"></p>
            <p id="popup-price"></p>
            <button class="hire-tutor" onclick="confirmHire()">Hire</button>
        </div>
    </div>

    <div id="confirmation-popup" class="popup">
        <div class="popup-content">
            <span class="close" onclick="closeConfirmationPopup()">&times;</span>
            <h2>Confirm Hire</h2>
            <p>Are you sure you want to hire this tutor?</p>
            <button class="hire-tutor" onclick="hireTutor()">Yes</button>
            <button class="hire-tutor" onclick="closeConfirmationPopup()">No</button>
        </div>
    </div>

    <script>
        let currentImageIndex = 0;
        let popupImages = [];
        let selectedProduct = '';

        function openPopup(title, description, price, images) {
            document.getElementById('popup-title').textContent = title;
            document.getElementById('popup-description').textContent = description;
            document.getElementById('popup-price').textContent = price;
            popupImages = images;
            currentImageIndex = 0;
            updatePopupImage();
            selectedProduct = title;
            document.getElementById('product-popup').style.display = 'flex';
        }

        function updatePopupImage() {
            const img = document.getElementById('popup-image');
            img.src = popupImages[currentImageIndex];
        }

        function nextImage() {
            currentImageIndex = (currentImageIndex + 1) % popupImages.length;
            updatePopupImage();
        }

        function prevImage() {
            currentImageIndex = (currentImageIndex - 1 + popupImages.length) % popupImages.length;
            updatePopupImage();
        }

        function closePopup() {
            document.getElementById('product-popup').style.display = 'none';
        }

        function confirmHire() {
            document.getElementById('confirmation-popup').style.display = 'flex';
        }

        function closeConfirmationPopup() {
            document.getElementById('confirmation-popup').style.display = 'none';
        }

        function hireTutor() {
            // Show confirmation message
            alert('You have hired the tutor: ' + selectedProduct);
            // Close product popup
            closePopup();
            // Close confirmation popup
            closeConfirmationPopup();
        }

        // Ensure popup is hidden initially
        window.onload = function () {
            closePopup();
            closeConfirmationPopup();
        }
    </script>
</body>
</html>
